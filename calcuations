<!DOCTYPE html>
<html>
<head>
  <style>
    .grid {
      display: grid;
      grid-template-columns: repeat(10, 40px);
      gap: 6px;
    }
    .cell {
      width: 40px;
      height: 40px;
      background: #e5e7eb;
      cursor: pointer;
    }
    .active {
      background: #22c55e;
    }
  </style>
</head>
<body>

<h3>Chair Distance Counter</h3>
<label>Distance per chair (m): </label>
<input id="spacing" type="number" value="0.5" step="0.1" />

<div class="grid" id="grid"></div>

<p id="result">Select two chairs</p>

<script>
  const grid = document.getElementById("grid");
  const result = document.getElementById("result");
  const spacingInput = document.getElementById("spacing");
  let active = [];

  for (let i = 0; i < 20; i++) {
    const cell = document.createElement("div");
    cell.className = "cell";
    cell.dataset.index = i;

    cell.onclick = () => {
      cell.classList.toggle("active");
      const index = Number(cell.dataset.index);

      if (active.includes(index)) {
        active = active.filter(i => i !== index);
      } else {
        active.push(index);
      }

      if (active.length === 2) {
        const distance = Math.abs(active[0] - active[1]) * spacingInput.value;
        result.innerText = `Distance: ${distance} m`;
      } else {
        result.innerText = "Select two chairs";
      }
    };

    grid.appendChild(cell);
  }
</script>

</body>
</html>
